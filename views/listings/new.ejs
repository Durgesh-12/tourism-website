<% layout('/layouts/boilerplate') %>
    
        <div class="row">
            <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <br/>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Enter the title" class="form-control" required>


        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description"class="form-control" ></textarea>
              </div>
        <div class="mb-3">
            <label for="Image URL" class="form-label">Image URL</label>
            <input type="text" name="listing[image[url]]" placeholder="Enter image URL"class="form-control" required>

        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image[filename]]" placeholder="Enter image filename"class="form-control" >
        </div>
    <div class="row">
       <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>

        <input name="listing[price]" placeholder="Enter price" type="number" class="form-control"required>
       </div>
       <div class="mb-3 col-md-4">
        <label for="Country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="Enter country" type="text" required>
    </div>

    </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control"required>
        </div>
        
        
        
        <br/><br/>
        <button class="btn btn-dark add-btn">Add</button>
        <br/><br/>
    </form>
</div>
</div>

        
        